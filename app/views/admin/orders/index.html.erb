<h2>注文履歴一覧</h2>

<div class="container">
  <div class="row">

  <table class="table">
	<thead class="table-secondary">
		<tr>
			<th>購入日時</th>
			<th>購入者</th>
			<th>注文個数</th>
			<th></th>
		</tr>
	</thead>
	<% @orders.each do |order| %>
	<tbody>
		  <tr>
  			<td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M') %></td>
  			<td><%= order.customer.last_name %><%= order.customer.first_name %></td>
  			<td><%= .amount %></td>
  			<td></td>
		</tr>
	</tbody>
	<% end %>
</table>
<%= paginate @orders %>

  </div>
</div>

