<h2>注文履歴詳細</h2>

<div class="container">
  <div class="row">
    <div class="col-2">
      <div>購入者</div>
      <div>注文日</div>
      <div>配送先</div>
      <div></div>
      <div>支払い方法</div>
      <div>注文ステータス</div>
      </div>

    <div class="col-10">
      <%#= link_to  admin_customer_path(@order.id) do %>
					<%= @order.customer.last_name %>
					<%= @order.customer.first_name %>
					<%# end %>
      <div><%= @order.created_at.strftime('%Y/%m/%d') %></div>
      <div>〒<%= @order.post_code %>　　<%= @order.address %></div>
      <div><%= @order.payment_method %></div>
      <div><%= @order.status %></div>
      <div><%# %></div>
    </div>
  </div>

  <div class="row">
  <div class="col-7">
  <table class="table">
	<thead class="table-secondary">
		<tr>
			<th>商品名</th>
			<th>単価（税込）</th>
			<th>数量</th>
			<th>小計</th>
			<th>製作ステータス</th>
		</tr>
	</thead>

	<tbody>
	  <% @order_details.each do |order_detail| %>
		  <tr>
  			<td><%= order_detail.product.name %></td>
  			<td><%= order_detail.price %></td>
  			<td><%= order_detail.amount %></td>
  			<td><%= ((order_detail.price)*(order_detail.amount)) %></td>

  			<td><%= form_with model:order_detail, url: admin_order_details_path(order_detail.id), method: :patch do |form| %><%= form.select :making_status, {'着手不可':'cannot', '製作待ち':'waiting', '製作中':'making', '製作完了':'done'}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %><%= form.submit "更新", class: "btn btn-primary " %>
  <%= form.submit %>
<% end %></td>
		</tr>
	</tbody>
	<% end %>
</table>
</div>
<div class="col-3">
  <div>商品合計</div>
  <div>送料</div>
  <div>請求金額合計</div>
</div>
<div class="col-3">
  <div><%= @order.total_payment %></div>
  <div></div>
  <div></div>
</div>