<div class="row">
  <div class="col-md-12">
    <h2 class="head-line title_h2 text-center">ジャンル一覧・追加</h2>
      <%= form_with model:[:admin, @genre], local:true do |f| %>
        <div class="col-md-offset-1">
          <%= f.text_field :name  %>
          
          <%= f.submit "追加", class: "btn btn-info" %>
        </div>
      <% end %>
    <div class="col-md-8 col-md-offset-2">
      <table class="table table-hover table-inverse table-bordered">
        <thead>
          <tr class="info">
            <th>ジャンル</th>
            <th>状態</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td class="text-left"><%= genre.name%></td>
              <td class="genre-td"><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>