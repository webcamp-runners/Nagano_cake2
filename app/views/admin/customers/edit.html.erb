<!-- 管理側 -->
<div class="container">
	<div class="row">
	  <div class="col-xs-offset-1 col-xs-10">
		<h2 class= "m-5"><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h2>
		<%= form_with model: @customer, url: admin_customer_path, local:true do |f| %>
		<table  class="table m-3">
			<tbody>
				<tr>
					<td>会員ID</td>
					<td><%=@customer.id %></td>
					<td></td>
				</tr>
				<tr>
					<td>氏名</td>
					<td><%= f.text_field :last_name, autofocus: true %></td>
					<td><%= f.text_field :first_name, autofocus: true %></td>
				</tr>
				<tr>
					<td>フリガナ</td>
					<td><%= f.text_field :last_name_kana, autofocus: true %></td>
					<td><%= f.text_field :first_name_kana, autofocus: true %></td>
				</tr>
				<tr>
					<td>郵便番号</td>
					<td><%= f.text_field :post_code, autofocus: true %></td>
					<td></td>
				</tr>
				<tr>
					<td>住所</td>
					<td colspan="2"><%= f.text_field :address, autofocus: true,class: "w-100 my-box" %></td>
					<td></td>
				</tr>
				<tr>
					<td>電話番号</td>
					<td><%= f.text_field :phone_number, autofocus: true %></td>
					<td></td>
				</tr>
				<tr>
					<td>メールアドレス</td>
					<td><%= f.text_field :email, autofocus: true %></td>
					<td></td>
				</tr>
				<tr>
					<td>会員ステータス</td>
					<td>
					<%= f.radio_button :is_deleted, :true %>有効
					<%= f.radio_button :is_deleted, :false %>退会
					</td>
					<td></td>
					<td></td>
				</tr>
				<td></td>
				<td>
					<%= f.submit "変更を保存",class: "btn btn-success" %>
				</td>
			</tbody>
		</table>
		 <% end %>
	  </div>
	</div>
</div>