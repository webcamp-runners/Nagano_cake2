<!-- 管理側 -->
<%= @customer.first_name + @customer.last_name %>さんの会員情報編集
<%= form_with model: @customer, url: admin_customer_path, local:true do |f| %>
<table>
	<tbody>
		<tr>
			<td>会員ID</td>
			<td><%=@customer.id %></td>
			<td></td>
		</tr>
		<tr>
			<td>氏名</td>
			<td><%= f.text_field :first_name, autofocus: true, class: "new_inform" %></td>
			<td><%= f.text_field :last_name, autofocus: true, class: "new_inform" %></td>
		</tr>
		<tr>
			<td>フリガナ</td>
			<td><%= f.text_field :first_name_kana, autofocus: true, class: "new_inform" %></td>
			<td><%= f.text_field :last_name_kana, autofocus: true, class: "new_inform" %></td>
		</tr>
		<tr>
			<td>郵便番号</td>
			<td><%= f.text_field :post_code, autofocus: true, class: "new_inform" %></td>
			<td></td>
		</tr>
		<tr>
			<td>住所</td>
			<td><%= f.text_field :address, autofocus: true, class: "new_inform" %></td>
			<td></td>
		</tr>
		<tr>
			<td>電話番号</td>
			<td><%= f.text_field :phone_number, autofocus: true, class: "new_inform" %></td>
			<td></td>
		</tr>
		<tr>
			<td>メールアドレス</td>
			<td><%= f.text_field :email, autofocus: true, class: "new_inform" %></td>
			<td></td>
		</tr>
		<tr>
			<td>会員ステータス</td>
			<td>
			<%= f.radio_button :is_deleted, :true %>有効
			<%= f.radio_button :is_deleted, :false %>退会
			</td>
			<td></td>
			<td></td>
		</tr>
		<td></td>
		<td>
			<%= f.submit "編集内容を保存" %>
		</td>
	</tbody>
</table>
 <% end %>