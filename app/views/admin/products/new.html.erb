<% if @product.errors.any? %>
<p><%= @product.errors.count %> errors prohibited this product from being saved:</p>
<ul>
  <% @product.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
</ul>
<% end %>

<div class="container">
 <div class="row">
  <div class="col-xs-6">
    <h2 class="head-line title_h2 text-center">商品新規登録</h2>
      <%= form_with model:[:admin,@product], method: :post, local:true do |f| %>

              <div class="form-group">
                <%= f.label :"商品画像", class: "col-sm-3 control-label" %>
                <%= f.attachment_field :image, class: "col-sm-9 control-label" %>
              </div>

              <div class="form-group">
                <%= f.label :"商品名", class: "col-sm-3 control-label" %>

              <%= f.text_field :name, class: "col-sm-9 form-control-static" %>
              </div>


              <div class="form-group">
                <%= f.label :"商品説明", class: "col-sm-3 control-label" %>
                <%= f.text_area :introduction, class: "col-sm-9 control-label" %>
              </div>

              <div class="col-xs-6">
                <%= f.label :"ジャンル", class: "col-sm-3 control-label" %>
                <%= f.collection_select(:genre_id, @genre, :id, :name, class: "col-sm-9") %>
              </div>

              <div class="form-group">
                <%= f.label :"税抜価格", class: "col-sm-3 control-label" %>
                <%= f.number_field :price,class: "col-sm-3 form-control-static" %>円
              </div>

              <div class="form-group">
                <%= f.label :"販売ステータス", class: "col-sm-3 control-label" %>
                <%= f.select :is_active, [['販売中', true],['販売停止中', false]], class: "col-sm-9" %>
              </div>
              <div class="actions col-xs-7">
              <%= f.submit "新規登録", class: "btn btn-primary btn-lg pull-right" %>
              </div>
        </tbody>
      <% end %>
  </div>
 </div>
</div>
