 <div class="container">
    <h1>商品一覧</h1>
      <table>
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @product.each do |product| %>
        <tbody>
          <div class="row">
          <tr>
            <td>
	             <%= product.id %>
	           </td>
	           <td>
	             <%= link_to(product.name) do %>
	             <%= product.name %>
	             <% end %>
	           </td>
	           <td>
	             <%= product.introduction %>
	           </td>
	           <td>
	             <%= product.genre_id %>
	           </td>
	           <td>
	             <%= product.is_active %>
	           </td>
          </tr>
          </div>
        </tbody>
        <% end %>
      </table>
  </div>