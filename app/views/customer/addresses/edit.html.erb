<P>配送先編集</P>

<%= form_with model:@address, local:true do |f| %>
<div class="form">
    <div class="form-group-row">
        <div class="col-sm-2">
      郵便番号（ハイフンなし）
        <%= f.text_field :post_code, autofocus: true, :placeholder =>"#{@address.post_code}", class:"form-control" %>
        </div>
    </div>

    <div class="form-group-row">
        <div class="col-sm-2">
        <label>住所</label>
        <%= f.text_field :address, :placeholder =>"#{@address.address}", class:"form-control" %>
        </div>
    </div>

    <div class="form-group-row">
        <div class="col-sm-2">
        <label>宛名</label>
        <%= f.text_field :name, :placeholder =>"#{@address.name}", class:"form-control" %>
        </div>
    <input type="submit" name="commit" value="変更先を保存" class="btn btn-success">
    </div>
</div>
 <% end %>