<h1>配送先編集</h1>

<%= form_with model:@address, local:true do |f| %>
<div class="form">
    <div class="row">
        <div class="col-sm-2 col-form-label">郵便番号（ハイフンなし）</div>
        <div class="col-sm-2"><%= f.text_field :post_code, autofocus: true, :placeholder =>"#{@address.post_code}", class:"form-control" %></div>
    </div>

    <div class="row">
        <div class="col-sm-2 col-form-label">住所</div>
        <div class="col-sm-4"><%= f.text_field :address, :placeholder =>"#{@address.address}", class:"form-control" %></div>
    </div>

    <div class="row">
        <div class="col-sm-2 col-form-label">宛名</div>
        <div class="col-sm-2"><%= f.text_field :name, :placeholder =>"#{@address.name}", class:"form-control" %></div>
    <input type="submit" name="commit" value="変更先を保存" class="btn btn-success">
    </div>
</div>
 <% end %>