<%= form_with model:@address, local:true do |f| %>
<div class="form-container" style="padding:50px">
    <div class="row" style="padding-bottom:10px">
        <div class="col-2"></div>
        <h2>配送先編集</h4>
    </div>
    <div class="row" style="padding-bottom:10px">
        <div class="col-2"></div>
        <div class="col-2">郵便番号（ハイフンなし）</div>
        <div class="col-2"><%= f.text_field :post_code, autofocus: true, :placeholder =>"#{@address.post_code}", class:"form-control" %></div>
    </div>

    <div class="row" style="padding-bottom:10px">
        <div class="col-2"></div>
        <div class="col-2">住所</div>
        <div class="col-4"><%= f.text_field :address, :placeholder =>"#{@address.address}", class:"form-control" %></div>
    </div>

    <div class="row">
        <div class="col-2"></div>
        <div class="col-2">宛名</div>
        <div class="col-2"><%= f.text_field :name, :placeholder =>"#{@address.name}", class:"form-control" %></div>
        <div class="col-2"></div>
        <div class="col-2"><input type="submit" name="commit" value="変更先を保存" class="btn btn-success"></div>
    </div>
</div>
 <% end %>