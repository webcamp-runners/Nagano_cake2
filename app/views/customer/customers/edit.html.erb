<!-- 顧客側 -->
<div class="container">
	<div class="row">
	  <div class="col-xs-offset-1 col-xs-10">
			<h3 class="head-line title_h2 text-center">会員情報編集</h3>
			 <%= form_with model: @customer, local:true do |f| %>
			<table  class="table">
				<tbody>
					<tr>
						<td>氏名</td>
						<td><%= f.text_field :last_name, autofocus: true %></td>
						<td><%= f.text_field :first_name, autofocus: true %></td>
					</tr>
					<tr>
						<td>フリガナ</td>
						<td><%= f.text_field :last_name_kana, autofocus: true %></td>
						<td><%= f.text_field :first_name_kana, autofocus: true %></td>
					</tr>
					<tr>
						<td>郵便番号</td>
						<td><%= f.text_field :post_code, autofocus: true %></td>
						<td></td>
					</tr>
					<tr>
						<td>住所</td>
						<td colspan="2"><%= f.text_field :address, autofocus: true,class: "w-100 my-box" %></td>

					</tr>
					<tr>
						<td>電話番号</td>
						<td><%= f.text_field :phone_number, autofocus: true %></td>
						<td></td>
					</tr>
					<tr>
						<td>メールアドレス</td>
						<td><%= f.text_field :email, autofocus: true %></td>
						<td></td>
					</tr>
					<td></td>
					<td>
						<%= f.submit "編集内容を保存",class: "btn btn-success" %>
					</td>
					<td>
						<%= link_to "退会する",unsubscribe_customers_path,class: "btn btn-danger" %>
					</td>
					<tr>
					</tr>
				</tbody>
			</table>
			 <% end %>
	  </div>
	</div>
</div>