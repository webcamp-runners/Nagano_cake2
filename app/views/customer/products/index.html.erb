<div class="container">
    <h1>商品一覧</h1>
      <table>
        <% @products.each do |product| %>
        <tbody>
          <div class="row">
          <tr>
	           <td colspan="4">

               <%= attachment_image_tag product, :image, :fill, 100, 100%>
	             <%= link_to product_path(product) do %>
	             <%= product.name %>
	             <% end %>
	             <%= product.tax_on %>

	           </td>
          </tr>
          </div>
        </tbody>
        <% end %>
      </table>
  </div>