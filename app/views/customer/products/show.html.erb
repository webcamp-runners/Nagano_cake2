<div class="container">
  <div class="row">
    <div class="col-xs-6 product-show">
      <div class="product-description">
        
        <div class="field product-name">
          <h2><%= @product.name %></h2>
        </div>
        <div class="field">
          <%= @product.introduction %>
        </div>
        <div class="field product-price">
              <span class="tax"><%= @product.tax_on %>(税込)</span>
          </h3>
        </div>
      </div>


      <div class="field">
        <% if @product.is_active == true %>
            <%= form_for(@cart_item , url: cart_items_path, method: :post) do |f| %>
              <%= f.hidden_field :product_id, value: @product.id %>
              <%= f.select :amount, options_for_select((1..10).to_a), include_blank: "個数選択" %>
              <%= f.submit "カートに入れる", class: "btn btn-primary" %>
            <% end %>
        <% elsif @product.is_active == false %>
          <h3>売り切れ中</h3>
        <% end %>
      </div>
    </div>
</div>