<div class="row">
        <div class="col-md-12">
    <h3 class="header-background col-md-3">注文履歴一覧</h3>
        <table class="active, table table-bordered">
		<thead>
			<tr class="active">
				<th>注文日</th>
				<th>配送先</th>
				<th>注文商品</th>
				<th>支払金額</th>
				<th>ステータス</th>
				<th>注文詳細</th>
			</tr>
		</thead>


　　　　<tbody>
			<% @orders.each do |order| %>
			<tr>
				<td><%= order.created_at.strftime('%Y/%m/%d') %></td>
				<td>
					<%= order.post_code %></br>
					<%= order.address %></br>
					<%= order.name %>
				</td>
				<td>
				<% total_amount = 0%>
				<% order.order_details.each do |order_detail| %>
				<% total_amount += order_detail.amount %>
				<% end %>
					<%= total_amount %></br>
				</td>
				<td><%= %>円</td>
				<td><%= order.status %></td>

				<td>
					<%= link_to '表示する', orders_path(order), class: 'btn btn-primary' %>
				</td>
			</tr>
			<% end %>
		</tbody>
		</table>
		</div>