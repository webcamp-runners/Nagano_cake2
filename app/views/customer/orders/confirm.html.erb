<div class="container">
  <h2>注文情報確認</h2>
  <div class="row">
    <div class="col-xs-7">
      <table class="table table-bordered">
      	<thead>
      		<tr class = "active">
      			<th>商品名</th>
      			<th>単価（税込）</th>
      			<th>数量</th>
      			<th>小計</th>
      		</tr>
      	</thead>
           <% @cart_items.each do |cart_item| %>
        	<tbody>
        		<tr>
        		  <td>
        		    <%= attachment_image_tag cart_item.product, :image, :fill, 50, 50 %>
        		    <%= cart_item.product.name %>
        		  </td>
        			<td> <%= cart_item.product.price %> </td>
        			<td> <%= cart_item.amount %> </td>
        		</tr>
        	</tbody>
        <% end %>
      </table>
    </div>
    <div class=" col-xs-5">
      <table class="table table-bordered">
      	<thead>
      	</thead>
      	<tbody>
      		<tr>
      			<td class = "active">送料</td>
      			<td>800</td>
      		</tr>
      		<tr>
      		  <td class = "active">商品合計</td>
      		</tr>
      		<tr>
      		  <td class = "active">請求金額</td>
      		</tr>
      	</tbody>
      </table>
    </div>
    </div>

            <div class="payment-method">支払方法</div>
               <td><%= @order.payment_method %></td>
          </tr>
          <tr>
            <td>お届け先</td>
            <td><%= @order.post_code %><%= @order.address %><br/><%= @order.name %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-xs-offset-5 col-xs-4">
      <%= form_with  url: {controller: 'orders', action: 'create' }, local:true do |f| %>
        <%= f.hidden_field :customer_id%>
        <%= f.hidden_field :payment_method %>
        <%#= f.hidden_field :post_code:%>
        <%= f.hidden_field :address%>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :shipping_cost, value: 800 %>
        <%= f.hidden_field :total_payment, value: 800 %>
        <%= f.hidden_field :status, value: 0 %>
       
        <%= f.submit "注文を確定する", class: "confirm-order-btn" %>
    <% end %>
    </div>
</div>