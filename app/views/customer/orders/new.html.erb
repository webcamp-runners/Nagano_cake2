 <div class="row">
    <h3 class="header-background col-md-3">注文情報入力</h3>
  </div>
      <%= form_with model: @order, url: confirm_orders_path, local: true do |f| %>
  <div class="row">
    <div class="col-md-12">
    <h3>支払方法</h3>
      <div class="col-md-12">
        <div>
          <%= f.radio_button :payment_method, 'クレジットカード', checked: true %>
          <%= f.label :payment_metod, "クレジットカード", {value: "クレジットカード", style: "display: inline-block;"} %>
        </div>
        <div>
          <%= f.radio_button :payment_method, '銀行振込' %>
          <%= f.label :payment_method, "銀行振込", {value: "銀行振込", style: "display: inline-block;"} %>
        </div>
      </div>
    </div>
​
  <div class="col-md-12">
    <h3>お届け先</h3>
      <div class="col-md-12">
        <%= f.radio_button :address_option, "0", checked: true %>
        <%= f.label :address_option, "ご自身の住所" %><br>
          <div class="col-md-12">
            〒<%= current_customer.post_code.to_s.insert(3, "-") %>　<%= current_customer.address %><br>
            <%= current_customer.last_name %><%= current_customer.first_name %>
          </div>
      </div>
      <div class="col-md-12">
        <%= f.radio_button :address_option, "1" %>
        <%= f.label :address_option, "登録済み住所" %></br>
          <div class="col-md-12">
            <%= f.collection_select :selected_address, current_customer.addresses, :id, :delivery_info %>
          </div>
      </div>

      <div class="col-md-12">
        <%= f.radio_button :address_option, "2" %>
        <%= f.label :address_option, "新しいお届け先" %></br>
      </div>
      <div class="new">
        <div class="col-md-12 order-type-c">
       <div class="form_group row">
            <label class="col-sm-3 control-label">郵便番号(ハイフンなし)</label>
            <div class="col-sm-3 newryoku">
              <%= f.text_field :post_code, class: "form-control" %>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-3 control-label">住所</label>
            <div class="col-sm-4">
              <%= f.text_field :address, class: "form-control" %>
            </div>
        </div>
        <div class="form_group row">
            <label class="col-sm-3 control-label">宛名</label>
            <div class="col-sm-3">
              <%= f.text_field :name, class: "form-control" %>
            </div>
        </div>
      </div>
        </div>
      </div>
      <div class="text-center"><%= f.submit '確認画面に進む', class: 'btn btn-info' %></div>
    <% end %>
  </div>
