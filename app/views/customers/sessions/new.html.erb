<div class-"container" style="padding-top:40px">
  <div class="row" style= "margin-bottom:20px">
    <div class="col-1"></div>
    <div class="col-3"><h2>ログイン</h2></div>
  </div>

  <div class="row" style= "margin-bottom:20px">
    <div class="col-1"></div>
    <div class="col-4" style="margin-left:60px">会員の方はこちらからログイン</div>
  </div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row" style= "margin-bottom:20px">
      <div class="col-2"></div>
      <div class="col-2"><%= f.label "メールアドレス" %></div>
      <div class="col-4"><%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %></div>
    </div>

    <div class="row" style= "margin-bottom:45px">
      <div class="col-2"></div>
      <div class="col-2"><%= f.label "パスワード" %></div>
      <div class="col-4"><%= f.password_field :password, autocomplete: "current-password", class:"form-control" %></div>
    </div>

    <div class="row">
      <div class="col-2"></div>
      <div class="col-2"></div>
      <div class="col-6">
        <%= f.submit "ログイン", class:"btn btn-primary w-25" %>
      </div>
      <% end %>
      </div>

    <div class="row" style= "margin-top:40px">
    <div class="col-1"></div>
    <div class="col-4" style="margin-left:60px">会員登録がお済みでない方</div>
    </div>

    <div class="row w-auto">
      <div class="col-1"></div>
      <div class="col-4" style="padding-left:100px"><%= link_to "こちら", new_customer_registration_path %>　から新規登録を行ってください。</div>

  </div>
</div>
</div>