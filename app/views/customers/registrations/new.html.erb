<div class="row" style="margin:40px">
  <label class="col-sm-2"></label>
<h4>新規会員登録</h4>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>


  <div class="form-group row">
    <label class="col-sm-3"></label>
    <label class="col-sm-2">名前</label>

    <%= f.label :last_name, '(姓)　' %>
    <div class="col-sm-2"><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class:"form-control", placeholder:"令和" %></div>

    <%= f.label :first_name, '(名)　' %>
    <div class="col-sm-2"><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class:"form-control", placeholder:"道子" %></div>
  </div>

  <div class="form-group row">
    <label class="col-sm-3"></label>
    <label class="col-sm-2">フリガナ</label>
    <%= f.label :last_name_kana, '(セイ)' %>
    <div class="col-sm-2"><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class:"form-control", placeholder:"レイワ" %></div>

    <%= f.label :first_name_kana, '(メイ)' %>
    <div class="col-sm-2"><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class:"form-control", placeholder:"ミチコ" %></div>
  </div>

  <div class="form-group row">
    <label class="col-sm-3"></label>
    <label class="col-sm-2"><%= f.label :email, 'メールアドレス' %></label>
    <div class="col-sm-2"><%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"sample@example.com" %></div>
  </div>

  <div class="form-group row">
    <label class="col-sm-3"></label>
     <label class="col-sm-2"><%= f.label :post_code, '郵便番号(ハイフンなし)' %></label>
    <div class="col-sm-2"><%= f.text_field :post_code, autofocus: true, autocomplete: "post_code", class:"form-control", placeholder:"0000000" %></div>
  </div>

  <div class="form-group row">
    <label class="col-sm-3"></label>
     <label class="col-sm-2"><%= f.label :address, '住所' %></label>
    <div class="col-sm-5"><%= f.text_field :address, autofocus: true, autocomplete: "address", class:"form-control", placeholder:"東京都渋谷区代々木神園町0−0" %></div>
  </div>

  <div class="form-group row">
    <label class="col-sm-3"></label>
     <label class="col-sm-2"><%= f.label :phone_number, '電話番号(ハイフンなし)' %></label>
    <div class="col-sm-2"><%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", class:"form-control", placeholder:"0000000000" %></div>
  </div>

  <div class="form-group row">
    <label class="col-sm-3"></label>
     <label class="col-sm-2"><%= f.label :password, 'パスワード(6文字以上)' %></label>
    <div class="col-sm-2"><%= f.password_field :password, autocomplete: "new-password", class:"form-control" %></div>
  </div>

  <div class="form-group row">
    <label class="col-sm-3"></label>
     <label class="col-sm-2"><%= f.label :password_confirmation, 'パスワード(確認用)' %></label>
    <div class="col-sm-2"><%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %></div>
  </div>

<div class="row">
    <label class="col-sm-5"></label>
    <div class="col-sm-4"><%= f.submit "新規登録",class:"btn btn-success w-50" %></div>
  </div>
<% end %>


<div class="row" style="margin-left:40px">
  <label class="col-sm-2"></label>
  <h4>既に登録済みの方</h4>
</div>
  
<div class="row">
  <label class="col-sm-3"></label>
<div class="col-sm-4"><%= link_to "こちら", new_customer_session_path %>　からログインしてください。</div>
</div>