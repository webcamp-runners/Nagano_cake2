<div class-"container" style="padding-top:40px">
  <div class="row" style= "margin-bottom:20px">
    <div class="col-1"></div>
    <h4 class="col-3">管理者ログイン</h4>
  </div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="row" style= "margin-bottom:20px">
      <div class="col-3"></div>
      <div class="col-2"><%= f.label "メールアドレス" %></div>
      <div class="col-4"><%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %></div>
    </div>

    <div class="row" style= "margin-bottom:20px">
      <div class="col-3"></div>
      <div class="col-2"><%= f.label "パスワード" %></div>
      <div class="col-4"><%= f.password_field :password, autocomplete: "current-password", class:"form-control" %></div>
    </div>

    <div class="row" style= "margin-bottom:20px">
      <div class="col-5"></div>
      <div class="col-4">
        <%= f.submit "ログイン", class:"btn btn-primary w-25" %>
      </div>
      <% end %>
</div>
