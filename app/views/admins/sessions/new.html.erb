<h2>管理者ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="row">
      <div class="col-sm-2 col-form-label"><%= f.label "メールアドレス" %></div>
      <div class="col-sm-4"><%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %></div>
    </div>

    <div class="row">
      <div class="col-sm-2 col-form-label"><%= f.label "パスワード" %></div>
      <div class="col-sm-4"><%= f.password_field :password, autocomplete: "current-password", class:"form-control" %></div>
    </div>

    <div class="row">
      <div class="col-sm-2"></div>
      <div class="col-sm-4">
        <%= f.submit "ログイン", class:"btn btn-primary" %>
      </div>
      <% end %>

